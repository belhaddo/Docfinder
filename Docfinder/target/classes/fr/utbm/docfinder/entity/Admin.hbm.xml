<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="fr.utbm.docfinder.entity">
   <class name="fr.utbm.docfinder.entity.Admin" optimistic-lock="version" schema="DOCFINDER" table="ADMIN">  
    <id name="id" type="int">
        <column name="id_admin"/>
        <generator class="increment"/>
    </id>
    
    
    <property name="email" column="email_admin" type="string"/>
    <property name="pwd" column="pwd_admin" type="string"/>
        
    
    <property name="phone" column="phone_admin" type="long"/>
        
   </class>
</hibernate-mapping>
