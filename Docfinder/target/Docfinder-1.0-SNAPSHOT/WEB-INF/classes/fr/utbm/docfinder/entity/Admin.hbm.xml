<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="fr.utbm.docfinder.entity">
    <class name="fr.utbm.docfinder.entity.Admin" optimistic-lock="version" schema="DOCFINDER" table="ADMIN"/>
  
    <id name="id" type="int">
        <column name="id_admin"/>
        <generator class="assigned"/>
    </id>
    
    
    <property name="email" type="string">
        <column length="30" name="email_admin" not-null="true"/>
    </property>
    <property name="pwd" type="string">
        <column length="30" name="pwd_admin" not-null="true"/>
    </property>
    
    <property name="phone" type="long">
        <column length="10" name="phone_admin" not-null="true"/>
    </property>
   
</hibernate-mapping>
