<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="fr.utbm.docfinder.entity.Reservation" optimistic-lock="version" schema="DOCFINDER" table="RESERVATION"/>
  <id column="id_reserv" name="id" type="int">
    <generator class="assigned"/>
  </id>
  <many-to-one class="fr.utbm.docfinder.Client" fetch="select" name="client">
    <column name="id_client" not-null="true"/>
  </many-to-one>
  <many-to-one class="fr.utbm.docfinder.Doctor" fetch="select" name="doctor">
    <column name="id_doc" not-null="true"/>
  </many-to-one>
  <property column="date_reserv" name="reservDate" not-null="true" type="date"/>
  <property column="rdv_reserv" name="rdvDate" not-null="true" type="date"/>
  <property column="start_reserv" name="startTime" not-null="true" type="date"/>
  <property column="end_reserv" name="endTime" not-null="true" type="date"/>
  <property column="status_reserv" name="status">
    <type name="org.hibernate.type.EnumType">
      <param name="enumClass">fr.utbm.docfinder.entity.StatusReservation</param>
    </type>
  </property>
  <property column="tarif_reserv" name="tarif" not-null="true" type="long"/>
</hibernate-mapping>
